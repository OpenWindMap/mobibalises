<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	<View android:layout_width="fill_parent" android:layout_height="0dip" android:visibility="invisible"></View>
	<RelativeLayout android:background="@drawable/favorite_item_background" android:clickable="true" android:longClickable="true" android:padding="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
		<com.pedro.android.mobibalises.favorites.FavoritesIconView android:id="@+id/fav_item_drawing" android:layout_width="66dip" android:layout_height="66dip" android:layout_alignParentTop="true" android:layout_alignParentRight="true" />
		<LinearLayout android:id="@+id/fav_item_text_layout" android:paddingLeft="5dip" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:layout_toLeftOf="@id/fav_item_drawing" android:layout_alignParentLeft="true">
            <TextView android:id="@+id/fav_item_name" android:textColor="@color/fav_item_text" android:singleLine="true" android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<TextView android:id="@+id/fav_item_date_time" android:textColor="@color/fav_item_text" android:singleLine="true" android:layout_width="fill_parent" android:layout_height="fill_parent" />
			<TextView android:id="@+id/fav_item_wind" android:textColor="@color/fav_item_text" android:singleLine="true" android:layout_width="fill_parent" android:layout_height="fill_parent" />
		</LinearLayout>
		<TextView android:id="@+id/fav_item_misc" android:textColor="@color/fav_item_text" android:paddingLeft="5dip" android:paddingRight="5dip" android:paddingBottom="2dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/fav_item_text_layout" />
	</RelativeLayout>
</LinearLayout>
