<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="onItemClick"
    android:orientation="horizontal"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/search_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="3dp"
        android:tag="@+id/tag_search_type" />

    <TextView
        android:id="@+id/search_item_provider"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="5dp"
        android:tag="@+id/tag_search_provider"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingLeft="7dp"
        android:tag="@+id/tag_search_id"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:tag="@+id/tag_search_latitude"
        android:visibility="gone" />

    <View
        android:layout_width="0px"
        android:layout_height="0px"
        android:tag="@+id/tag_search_longitude"
        android:visibility="gone" />

</LinearLayout>